generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 아버님 엑셀 파일에 딱 맞춘 품목 테이블
model Item {
  id        Int      @id @default(autoincrement())
  code      String?  @unique // A-1, B-9 같은 코드
  name      String   // 제품명 (25박스 메탈 직냉식)
  category  String?  // 카테고리
  spec      String?  // 사이즈 (627*800*1900)
  
  // 기간별 단가 (엑셀 컬럼에 맞춤)
  price1to3   Int @default(0) // 1~3일
  price4to7   Int @default(0) // 4~7일
  price8to10  Int @default(0) // 8~10일
  price11to14 Int @default(0) // 11~14일
  price15to20 Int @default(0) // 15~20일
  price21to31 Int @default(0) // 21~31일 (1개월)
  priceOver1M Int @default(0) // 1개월 이후
  
  imagePath String? // 이미지 (참조용)
  createdAt DateTime @default(now())
}

model Quote {
  id          Int      @id @default(autoincrement())
  clientName  String
  eventName   String
  totalAmount Int
  createdAt   DateTime @default(now())
}